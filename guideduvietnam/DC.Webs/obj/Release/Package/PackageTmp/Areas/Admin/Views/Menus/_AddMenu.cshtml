<div id="frmMenuAdd" class="form-horizontal form-label-left">
    <div class="form-group">
        <label class="control-label" for="MenuSourceId">
            Chọn nguồn nội dung <span class="required">*</span>
        </label>
        <select class="select2_single form-control form-large search-select" id="MenuSourceId" name="MenuSourceId" data-bind="foreach: MenuSourceOptions, value: MenuSourceId">
            <option data-bind="text: Text, value: Value"></option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label" for="ParentId">
            Danh mục cha
        </label>
        <select class="form-control" name="ParentId" id="ParentId" data-bind="value: ParentId, foreach: ParentOptions">
            <option data-bind="value: Value, text: Text"></option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label" for="MenuContentId">
            Nội dung <span class="required">*</span>
        </label>
        <select class="form-control" name="MenuContentId" id="MenuContentId" data-bind="value: MenuContentId, foreach: MenuContentOptions,visible:VisibleUrl()==1">
            <option data-bind="value: Value, text: Text"></option>
        </select>
        <input type="text" id="Title" name="LinkUrl" data-bind="value:LinkUrl,visible:VisibleUrl()==0" maxlength="512" class="form-control">
    </div>
    <div class="form-group">
        <label class="control-label" for="Name">
            Tiêu đề menu <span class="required">*</span>
        </label>
        <input type="text" id="Name" name="Name" data-bind="value:Name" maxlength="512" class="form-control">        
    </div>
    <div class="form-group">
        <label class="control-label" for="OrderBy">
            Thứ tự hiển thị
        </label>
        <input type="text" id="OrderBy" name="OrderBy" data-bind="value:OrderBy" class="form-control">
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-7 col-sm-7 col-xs-12 col-md-offset-3">
            <p id="Notice" style="color: red; text-align: center;"></p>
            <button id="btn-submit" type="button" data-bind="click: Submit,text:btnName" class="btn btn-success">Lưu lại</button>
            <button type="button" data-bind="click: Cancel" class="btn btn-default">Hủy bỏ</button>
        </div>
    </div>
</div>
