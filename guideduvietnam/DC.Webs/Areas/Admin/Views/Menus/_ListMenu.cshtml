<div id="MenuList">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tiêu đề menu</th>
                <th>Url</th>
                <th>Nội dung</th>
                <th style="width: 80px">Thứ tự</th>
                <th style="width: 50px"></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: MenuItems">
            <tr>
                <td><span data-bind="text:Name"></span></td>
                <td><span data-bind="text:Url"></span></td>
                <td><span data-bind="text:Type"></span></td>
                <td><span data-bind="text:OrderBy"></span></td>
                <td>
                    <a href="javascript:;" data-bind='click: $parent.EditItems' title="Cập nhật"><i class="fa fa-edit"></i></a>
                    <a href="javascript:;" title="Xóa" data-bind='click: $parent.DeleteItems'><i class="fa fa-remove"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
    <!--poup delete-->
    <div class="modal fade" id="popupDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel" style="color: red;">Thông báo</h4>
                </div>
                <div class="modal-body">
                    <h4 style="color: #222;">Bạn chắc chắn muốn xóa menu này?</h4>
                </div>
                <div class="modal-footer" style="text-align: center !important;">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" data-bind="click: DeleteConfirmed">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>

