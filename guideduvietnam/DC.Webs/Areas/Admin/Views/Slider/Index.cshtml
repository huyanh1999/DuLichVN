@model DC.Webs.Models.SliderViewModel
@{
    ViewBag.Title = "Danh sách slide";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Danh sách slider
                    </h2>
                    <a href="/Admin/Slider/Add" class="btn btn-primary btn-sm fr">Thêm mới</a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Tên slide</th>
                                <th>Link url</th>
                                <th>Thứ tự hiển thị</th>
                                <th>Tóm tắt</th>                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.SliderItems != null)
                            {
                                foreach (var item in Model.SliderItems)
                                {
                                    <tr>
                                        <td><img src="@item.Images" width="250"/></td>
                                        <td>@item.Name</td>
                                        <td>@item.Url</td>
                                        <td>@item.OrderBy</td>
                                        <td>@item.Description</td>
                                        
                                        <td>
                                            <a class="btn btn-xs btn-default" href="/Admin/Slider/Edit/@item.Id" title="Cập nhật"><i class="fa fa-edit"></i></a>
                                            <a class="btn btn-xs btn-default" href="/Admin/Slider/Delete/@item.Id" title="Xóa" onclick="return confirm('Bạn chắc muốn xóa slider này?'); "><i class="fa fa-trash"></i></a>                                            
                                        </td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- Datatables -->
    <script>
        $(document).ready(function () {
            $('#datatable').dataTable({
                "bSort": false
            });
        });
    </script>
    <!-- /Datatables -->
}

