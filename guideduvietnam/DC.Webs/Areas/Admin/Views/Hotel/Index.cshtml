@model DC.Webs.Models.HotelViewModel
@{
    ViewBag.Title = "Danh sách khách sạn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="" id="hotelList">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Danh sách khách sạn
                    </h2>
                    <a href="javascript:;" data-bind="click:AddItems" class="btn btn-primary btn-sm fr">Thêm mới</a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="filter-container">
                        <div class="btn-group btn-group-filter">
                            <div class="search-container">
                                <input type="text" data-bind="value: Query" placeholder="Nhập từ khóa tìm kiếm ..." class="form-control form-large search-input">
                            </div>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-default dropdown-toggle btn-filter" data-bind="click: ActionSearch">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th width="40px">STT</th>
                            <th>Hotel name</th>
                            <th>Orderby</th>
                            <th width="80px"></th>
                        </tr>
                        </thead>
                        <tbody data-bind="foreach: HotelItems">
                        <tr>
                            <td><span data-bind="text:$index()+1"></span></td>
                            <td><span data-bind="text:Name"></span></td>
                            <td><span data-bind="text:OrderBy"></span></td>
                            <td>
                                <a class="btn btn-xs btn-default" data-bind='click:$parent.EditItems' title="Cập nhật"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-xs btn-default" href="javascript:;" title="Xóa" data-bind='click: $parent.DeleteItems'><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--poup delete-->
    @Html.Partial("_PopupDelete")
    @Html.Partial("_HotelInfo")
</div>

<script type="text/javascript">
    var data = @(Html.Raw(Json.Encode(Model)));
</script>
<script src="/Content/js/Admin/Hotel/HotelList.js"></script>


